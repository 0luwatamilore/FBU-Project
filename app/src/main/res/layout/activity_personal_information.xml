<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PersonalInformationActivity"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    android:scrollbars="none">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:text="Personal Information"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/iv_profile_pic"
            android:layout_width="328dp"
            android:layout_height="268dp"
            android:layout_below="@+id/textView12"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="33dp"
            tools:srcCompat="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/tv_FirstName"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_profile_pic"
            android:layout_alignParentStart="true"
            android:layout_marginStart="60dp"
            android:layout_marginTop="60dp"
            android:text="FirstName:"
            android:textAlignment="center"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_LastName"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_FirstName"
            android:layout_alignParentStart="true"
            android:layout_marginStart="60dp"
            android:layout_marginTop="40dp"
            android:text="Last Name:"
            android:textAlignment="center"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_UserName"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_LastName"
            android:layout_alignParentStart="true"
            android:layout_marginStart="60dp"
            android:layout_marginTop="40dp"
            android:text="Username:"
            android:textAlignment="center"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_first_name"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_profile_pic"
            android:layout_marginTop="60dp"
            android:layout_toEndOf="@+id/tv_FirstName"
            android:text="TextView"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_last_name"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_first_name"
            android:layout_marginTop="40dp"
            android:layout_toEndOf="@id/tv_LastName"
            android:text="TextView"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_last_name"
            android:layout_marginTop="40dp"
            android:layout_toRightOf="@id/tv_UserName"
            android:text="TextView"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_change_picture"
            android:layout_width="314dp"
            android:layout_height="59dp"
            android:layout_below="@+id/tv_UserName"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="60dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="40dp"
            android:text="Change Picture"
            android:textSize="20sp" />

    </RelativeLayout>




</ScrollView>